@page
@model Inzynierka.Areas.Identity.Pages.Transactions.DeleteModel
@{
    ViewData["Title"] = "Delete Transaction";
}

<div class="container">
    <h2>Delete Transaction</h2>
    <p>Are you sure you want to delete this transaction?</p>

    <!-- EJ2 Grid to display transaction details -->
    <ejs-grid id="transactionGrid" dataSource="@Model.TransactionDetails" allowPaging="true" allowSorting="true">
        <e-grid-columns>
            <e-grid-column field="CategoryTitleWithIcon" headerText="Category"></e-grid-column>
            <e-grid-column field="Date" headerText="Date" format="MMM-dd-yy" type="date"></e-grid-column>
            <e-grid-column field="FormattedAmount" headerText="Amount" textAlign="Right"></e-grid-column>
        </e-grid-columns>
    </ejs-grid>

    <!-- Form to confirm deletion -->
    <form method="post" class="mt-3">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Transaction.TransactionId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>