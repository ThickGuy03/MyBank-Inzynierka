@page
@model Inzynierka.Areas.Identity.Pages.Transactions.DeleteModel

@{
    ViewData["Title"] = "Delete Transaction";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this transaction?</h3>

<div>
    <h4>Transaction Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.Category.Title)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.Amount)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.Note)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.Note)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Transaction.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Transaction.Date)
        </dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Transaction.TransactionId" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</form>
